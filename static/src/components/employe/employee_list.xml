<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="loan_management.EmployeeListView" owl="1">
        <!-- ... début du template inchangé ... -->

        <!-- Grid des employés -->
        <div class="row g-3">
            <t t-foreach="filterRecords()" t-as="record" t-key="record.id">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 employee-card">
                        <div class="card-body">
                            <!-- En-tête de la carte -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <t t-esc="record.data.nom"/> <t t-esc="record.data.prenoms"/>
                                    </h5>
                                    <div class="text-muted small">
                                        Matricule: <span class="fw-medium"><t t-esc="record.data.matricule"/></span>
                                    </div>
                                </div>
                                <span t-attf-class="badge rounded-pill {{getSexeClass(record.data.sexe)}} text-dark">
                                    <t t-esc="record.data.sexe === 'M' ? 'Masculin' : 'Féminin'"/>
                                </span>
                            </div>

                            <!-- Informations principales -->
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fa fa-briefcase me-2 text-muted"></i>
                                    <span><t t-esc="record.data.fonction"/></span>
                                </div>
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fa fa-building me-2 text-muted"></i>
                                    <span><t t-esc="record.data.departement"/></span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-map-marker me-2 text-muted"></i>
                                    <span><t t-esc="record.data.service"/></span>
                                </div>
                            </div>

                            <!-- Pied de la carte -->
                            <div class="border-top pt-3">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <span class="text-muted">Âge:</span>
                                        <span t-attf-class="ms-1 fw-medium {{getAgeClass(record.data.age)}}">
                                            <t t-esc="record.data.age"/> ans
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-muted">Ancienneté:</span>
                                        <span class="ms-1 fw-medium">
                                            <t t-esc="record.data.anciennete"/> ans
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>