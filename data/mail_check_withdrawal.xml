<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="check_withdrawal_email_template" model="mail.template">
            <field name="name">Confirmation de retrait de chèque</field>
            <field name="model_id" ref="model_loan_mutual"/>
            <field name="subject">Confirmation de retrait de chèque MAPAA</field>
            <field name="email_from">${(object.company_id.email or user.company_id.email)|safe}</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="body_html" type="html">
                <div style="background-color: #f8f9fa; padding: 10px; font-family: &apos;Helvetica Neue&apos;, Arial, sans-serif;">
                    <div style="max-width: 600px; margin: 0 auto; background-color: white; border-radius: 10px; padding: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                        <!-- En-tête -->
                        <div style="display: flex; align-items: center; justify-content: center; padding: 15px; margin-bottom: 20px; background-color: #fff;">
                            <!-- Titres centrés -->
                            <div style="text-align: center;">
                                <h3 style="color: #2c3e50; margin: 0; padding: 0; text-align:center; font-size: 20px; font-weight: 600;">
                                    Confirmation de retrait de chèque
                                </h3>
                                <h4 style="color: #3498db; margin: 10px 0 0 0; font-size: 16px;">
                                    <span t-out="object.reference or &apos;&apos;"></span>
                                </h4>
                            </div>
                        </div>
                        
                        <!-- Introduction -->
                        <p style="color: #34495e; font-size: 14px; line-height: 1.5; margin-bottom: 20px;">
                            Merci d'avoir retiré votre chèque. Voir détails ci-dessous::
                        </p>
                        
                        <!-- Informations principales -->
                        <div style="background-color: #f8f9fa; border-radius: 8px; padding: 15px; margin-bottom: 15px;">
                            <!-- Chaque information sur sa propre ligne -->
                            <div style="margin-bottom: 15px;">
                                <span style="color: #7f8c8d; font-size: 14px;">Bénéficiaire</span>
                                <br/>
                                <span style="color: #2c3e50; font-size: 14px; font-weight: 600;">
                                    <span t-out="object.nom or &apos;&apos;"></span>
                                    <span t-out="object.prenoms or &apos;&apos;"></span>
                                </span>
                            </div>
                            
                            <div style="margin-bottom: 15px;">
                                <span style="color: #7f8c8d; font-size: 14px;">Numéro du chèque</span>
                                <br/>
                                <span style="color: #2c3e50; font-size: 14px; font-weight: 600;" t-out="object.check_number or &apos;&apos;"></span>
                            </div>
                            
                            <div style="margin-bottom: 15px;">
                                <span style="color: #7f8c8d; font-size: 14px;">Montant du chèque</span>
                                <br/>
                                <span style="color: #2c3e50; font-size: 14px; font-weight: 600;">
                                    <span t-esc="&apos;{:,.0f}&apos;.format(object.check_amount or 0).replace(&apos;,&apos;, &apos; &apos;)"></span> FCFA
                                </span>
                            </div>
                            
                            <div style="margin-bottom: 15px;">
                                <span style="color: #7f8c8d; font-size: 14px;">Mensualité</span>
                                <br/>
                                <span style="color: #2c3e50; font-size: 14px; font-weight: 600;">
                                    <span t-esc="&apos;{:,.0f}&apos;.format(object.mensualite or 0).replace(&apos;,&apos;, &apos; &apos;)"></span> FCFA
                                </span>
                            </div>
                            
                            <!-- Informations de remboursement avec style distinct -->
                            <div style="text-align: center; margin-top: 15px; padding: 10px; background-color: #e8f6f3; border-radius: 8px;">
                                <span style="color: #16a085; font-size: 14px;">Début des prélèvements</span>
                                <br/>
                                <span style="color: #16a085; font-size: 16px; font-weight: 600;" t-out="object.start_date_deduction or &apos;&apos;"></span>
                                <br/>
                                <span style="color: #16a085; font-size: 14px;">Durée de remboursement</span>
                                <br/>
                                <span style="color: #16a085; font-size: 16px; font-weight: 600;" t-out="object.modalite_remboursement or &apos;&apos;"></span>
                                <span style="color: #16a085; font-size: 14px;"> mois</span>
                            </div>
                        </div>
                        
                        <!-- Section contacts -->
                        <div style="background-color: #fff8f0; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                            <h6 style="color: #e67e22; margin: 0 0 15px 0; font-size: 12px;">
                                Pour toute information complémentaire, veuillez contacter la commission des prêts MAPAA :
                            </h6>
                            <div style="display: flex; flex-direction: column; gap: 10px;">
                                <div style="padding: 8px; border-left: 3px solid #e67e22;">
                                    <strong style="color: #34495e; font-size: 12px;">
                                        <span t-out="object.responsable_1 or &apos;&apos;"></span>
                                    </strong>
                                    <span style="color: #7f8c8d; font-size: 12px; margin-left: 10px;" t-out="object.contact_responsable_1 or &apos;&apos;"></span>
                                </div>
                                <div style="padding: 8px; border-left: 3px solid #e67e22;">
                                    <strong style="color: #34495e; font-size: 12px;">
                                        <span t-out="object.responsable_2 or &apos;&apos;"></span>
                                    </strong>
                                    <span style="color: #7f8c8d; font-size: 12px; margin-left: 10px;" t-out="object.contact_responsable_2 or &apos;&apos;"></span>
                                </div>
                                <div style="padding: 8px; border-left: 3px solid #e67e22;">
                                    <strong style="color: #34495e; font-size: 12px;">
                                        <span t-out="object.responsable_3 or &apos;&apos;"></span>
                                    </strong>
                                    <span style="color: #7f8c8d; font-size: 12px; margin-left: 10px;" t-out="object.contact_responsable_3 or &apos;&apos;"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Rappel important -->
                        <div style="background-color: #f0f8ff; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                            <h6 style="color: #3498db; margin: 0 0 10px 0; font-size: 14px; text-align: center;">
                                Rappel important
                            </h6>
                            <p style="color: #34495e; font-size: 14px; line-height: 1.5; text-align: center;">
                                Les prélèvements seront effectués directement sur votre salaire à partir du mois de <strong t-out="object.start_date_deduction or &apos;&apos;"></strong>.
                            </p>
                        </div>
                        
                        <!-- Signature -->
                        <div style="text-align: center; margin-top: 20px; padding-top: 15px; border-top: 1px solid #ecf0f1;">
                            <p style="color: #7f8c8d; margin: 0; font-size: 14px;">Cordialement MAPAA,</p>
                            <p style="color: #2c3e50; font-weight: 600; font-size: 14px; margin: 5px 0 0 0;">Service Prêt Mutuel</p>
                        </div>
                    </div>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>