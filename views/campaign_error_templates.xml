<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="campaign_error" name="Campaign Error">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card border-0 shadow-sm" style="background: linear-gradient(145deg, #ffffff, #f8f9fa);">
                            <div class="card-body p-4">
                                <!-- Icône d'erreur -->
                                <div class="text-center mb-4">
                                    <i class="fa fa-exclamation-circle fa-3x" style="color: #e74c3c;"></i>
                                </div>
                                
                                <!-- Message d'erreur -->
                                <h5 class="text-center mb-3" style="color: #2c3e50;">
                                    <t t-esc="error" style="color:rgb(236, 0, 0);"/>
                                </h5>
                                
                                <div class="text-center">
                                    <p class="mb-4" style="color: #7f8c8d;">Veuillez réessayer ultérieurement.</p>
                                </div>
                                
                                <!-- Bouton de retour -->
                                <div class="text-center">
                                    <a href="/" class="btn btn-primary px-4" style="background-color: #3498db; border: none; box-shadow: 0 2px 4px rgba(52, 152, 219, 0.2);">
                                        <i class="fa fa-home me-2"></i>Retour à l'accueil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>