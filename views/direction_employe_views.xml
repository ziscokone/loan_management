<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue Form -->
    <record id="view_direction_employe_form" model="ir.ui.view">
        <field name="name">direction.employe.form</field>
        <field name="model">direction.employe</field>
        <field name="arch" type="xml">
           <form>

                <group>
                    <group >
                        <field name="name"/>
                    </group>
                    <group >
                        <field name="date_creation"/>
                    </group>
                </group>
        </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_loan_campagn_tree" model="ir.ui.view">
        <field name="name">direction.employe.tree</field>
        <field name="model">direction.employe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_creation"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="direction_validation" model="ir.actions.act_window">
        <field name="name">Direction</field>
        <field name="res_model">direction.employe</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_loan_root" name="PrÃªt Scolaire"/>
    <menuitem id="menu_direction_employe" name="Directions" parent="menu_loan_root" action="direction_validation"/>
</odoo>