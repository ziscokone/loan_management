<odoo>
    <!-- Action pour afficher les enregistrements dans un tableau -->
    <record id="action_mapaa_config" model="ir.actions.act_window">
        <field name="name">Configuration de l'ancienneté</field>
        <field name="res_model">mapaa.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Vue Tree (Arbre) pour afficher la configuration -->
    <record id="view_tree_mapaa_config" model="ir.ui.view">
        <field name="name">mapaa.config.tree</field>
        <field name="model">mapaa.config</field>
        <field name="arch" type="xml">
            <tree string="Configuration de l'ancienneté">
                <field name="date_reference"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire pour la configuration -->
    <record id="view_form_mapaa_config" model="ir.ui.view">
        <field name="name">mapaa.config.form</field>
        <field name="model">mapaa.config</field>
        <field name="arch" type="xml">
            <form string="Configuration de l’ancienneté">
                <header>
                    <button name="update_anciennete_et_age" type="object" string="Valider et Mettre à jour l'ancienneté des employés" class="btn-success"/>
                </header>
                <sheet>
                    <group>
                        <field name="date_reference"/>
                    </group>

                    <notebook>
                        <page string="Informations des responsables à contacter" name="contacts">
                            <div class="alert alert-info" role="alert">
                                <strong>Note :</strong> Ces informations seront utilisées dans les communications par email aux demandeurs.
                            </div>
                                <group string="Informations des responsables à contacter">
                                    <group>
                                        <field name="responsable_1" placeholder="Nom du responsable 1"/>
                                        <field name="contact_responsable_1" placeholder="Contact du responsable 1"/>
                                    </group>
                                    <group>
                                        <field name="responsable_2" placeholder="Nom du responsable 2"/>
                                        <field name="contact_responsable_2" placeholder="Contact du responsable 2"/>
                                    </group>
                                    <group>
                                        <field name="responsable_3" placeholder="Nom du responsable 3"/>
                                        <field name="contact_responsable_3" placeholder="Contact du responsable 3"/>
                                    </group>
                                    <group>
                                        <field name="responsable_4" placeholder="Nom du responsable 4"/>
                                        <field name="contact_responsable_4" placeholder="Contact du responsable 4"/>
                                    </group>
                                </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Menu -->
    <menuitem id="mapaa_config_menu" name="Configurations" parent="menu_mutual_root"   action="action_mapaa_config" groups="loan_mutual.super_admin_pret_mutuel,loan_mutual.manager_pret_mutuel"/>
    <!-- Sous-menu pour accéder à la configuration -->
    <!-- <menuitem id="paa_config_submenu" name="Ancienneté et Email" parent="mapaa_config_menu" sequence="20"/> -->

</odoo>
